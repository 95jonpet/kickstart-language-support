{
  "name": "kickstart-language-support",
  "publisher": "peterjonsson",
  "displayName": "Kickstart Language Support",
  "description": "Support for Kickstart files",
  "version": "0.0.4",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/95jonpet/kickstart-language-support.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Kickstart Language Support configuration",
      "properties": {
        "kickstartLanguageSupport.linting.lintOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Whether to lint Kickstart files when saved."
        }
      }
    },
    "languages": [
      {
        "id": "kickstart",
        "aliases": [
          "Kickstart",
          "kickstart"
        ],
        "extensions": [
          ".ks"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "kickstart",
        "scopeName": "source.kickstart",
        "path": "./syntaxes/kickstart.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.inline.shell": "shellscript"
        },
        "tokenTypes": {
          "meta.embedded.inline.shell": "other"
        }
      }
    ],
    "snippets": [
      {
        "language": "kickstart",
        "path": "./snippets/kickstart-snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^16.18.34",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "typescript": "^5.1.3"
  }
}
